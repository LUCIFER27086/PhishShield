{
  "manifest_version": 3,
  "name": "PhishShield Live Scanner",
  "version": "2.0",
  "description": "Connects to PhishShield Python Backend to scan Gmail in real-time.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}